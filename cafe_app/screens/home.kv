# on_press: app.root.current = "LoginScreen"

<HomeScreen>:
    name: "HomeScreen"
    MDCard:
        size_hint: None, None
        size: 450, 600
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "Welcome to Cafe Library!"
            font_size: 38
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 50

        MDTextField:
            id: user_name
            mode: 'round'
            hint_text: "User Name"
            hint_font_size: 1
            icon_right: "account"
            size_hint_x: .8
            width: 300
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: mobile_no
            mode: 'round'
            input_filter: 'int'
            hint_text: "Mobile No"
            icon_right: "phone"
            size_hint_x: .8
            width: 300
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDRoundFlatButton:
            text: "SEND OTP"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.send_otp(mobile_no.text)

        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.clear()

        Widget:
            size_hint_y: None
            height: 10
